package service;

import java.util.List;
import java.util.Optional;
import java.util.ArrayList;

import entity.Employee;

public class EmployeeService {

	private static List<Employee> employeeList= new ArrayList<Employee>();
	
	public void initializeEmployee()
	{
		
		Employee e1= new Employee();
		e1.setAdmin(true);
		e1.setEmpId(101);
		e1.setFirstName("Harsh");
		e1.setLastName("Thakur");
		e1.setPassword("123");
		e1.setSalary(10000);
		e1.setUserName("aaa");
		employeeList.add(e1);
		

		Employee e2= new Employee();
		e2.setAdmin(false);
		e2.setEmpId(101);
		e2.setFirstName("Ram");
		e2.setLastName("Verma");
		e2.setPassword("123");
		e2.setSalary(5000);
		e2.setUserName("bbb");
		employeeList.add(e2);
		
	}
	
	public Employee login(String userName, String password)
	{
		Optional<Employee> emp= employeeList.stream().filter(employeeList -> employeeList.getUserName().equals(userName) && employeeList.getPassword().equals(password)).findFirst();
		if(emp.isPresent())
		{
			return emp.get();
		}
		return null;
	}
	

}
